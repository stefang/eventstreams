- form_for [current_user, @event, @venue] do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :address_1
    %br
    = f.text_field :address_1
  %p
    = f.label :address_2
    %br
    = f.text_field :address_2
  %p
    = f.label :address_3
    %br
    = f.text_field :address_3
  %p
    = f.label :city
    %br
    = f.text_field :city
  %p
    = f.label :county
    %br
    = f.text_field :county
  %p
    = f.label :postcode
    %br
    = f.text_field :postcode
  %p
    = f.label :website
    %br
    = f.text_field :website
  %p
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  %p
    = f.label :published
    %br
    = f.check_box :published
  %p
    = f.submit
