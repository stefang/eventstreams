- unless current_subdomain.blank?
  - title @talk.title

  %p
    %strong Title:
    =h @talk.title
  %p
    %strong Description:
    =h @talk.description
  %p
    %strong Start:
    =h @talk.start
  %p
    %strong Duration:
    =h @talk.duration
  %p
    %strong Track:
    =h @talk.track_id
  %p
    %strong Published:
    =h @talk.published
    
  %h3 Speakers

  %table
    %tr
      %th Name
      %th Biog
    - for speaker in @speakers
      %tr
        %td= image_tag speaker.portrait.url(:thumb)
        %td= h speaker.name
        %td= h speaker.biog

  %h3 Videos

  %table
    %tr
      %th Title
      %th Description
      %th Vimeo
    - for video in @videos
      %tr
        %td= link_to video.title, talk_video_path(@talk, video)
        %td= h video.description
        %td= h video.vimeo_id

-else 
  - title @talk.title

  %p
    %strong Title:
    =h @talk.title
  %p
    %strong Description:
    =h @talk.description
  %p
    %strong Start:
    =h @talk.start
  %p
    %strong Duration:
    =h @talk.duration
  %p
    %strong Track:
    =h @talk.track_id
  %p
    %strong Published:
    =h @talk.published

  %p
    = link_to "Edit", edit_user_event_talk_path(current_user, @event, @talk)
    |
    = link_to "Destroy", user_event_talk_path(current_user, @event, @talk), :confirm => 'Are you sure?', :method => :delete
    |
    = link_to "View All", user_event_talks_path
    
  %h3 Speakers

  %table
    %tr
      %th Name
      %th Biog
      %th Published
    - for speaker in @speakers
      %tr
        %td= h speaker.name
        %td= h speaker.biog
        %td= h speaker.published
        %td= link_to 'Show', user_event_talk_speaker_path(current_user, @event, @talk, speaker)
        %td= link_to 'Edit', edit_user_event_talk_speaker_path(current_user, @event, @talk, speaker)
        %td= link_to 'Destroy', user_event_talk_speaker_path(current_user, @event, @talk, speaker), :confirm => 'Are you sure?', :method => :delete

  %p= link_to "New Speaker", new_user_event_talk_speaker_path(current_user, @event, @talk)

  %h3 Videos

  %table
    %tr
      %th Title
      %th Description
      %th Vimeo
      %th Published
    - for video in @videos
      %tr
        %td= h video.title
        %td= h video.description
        %td= h video.vimeo_id
        %td= h video.published
        %td= link_to 'Show', user_event_talk_video_path(current_user, @event, @talk, video)
        %td= link_to 'Edit', edit_user_event_talk_video_path(current_user, @event, @talk, video)
        %td= link_to 'Destroy', user_event_talk_video_path(current_user, @event, @talk, video), :confirm => 'Are you sure?', :method => :delete

  %p= link_to "New Video", new_user_event_talk_video_path(current_user, @event, @talk)
