- form_for [current_user, @event, @event_page] do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :content
    %br
    = f.text_area :content
  / %p
  /   = f.label :event_id
  /   %br
  /   = f.text_field :event_id
  %p
    = f.label :published
    %br
    = f.check_box :published
  %p
    = f.submit
