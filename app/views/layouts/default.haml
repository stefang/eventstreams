!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= yield(:title) || t('title')
    %meta{:name=>'viewport', :content=>'width=device-height'}
    %link{:rel=>'shortcut icon', :href => image_path("favicon.ico")}
    %link{:rel=>'icon', :type=>'image/png', :href => image_path("favicon.png")}
    %script{:type=>"text/javascript", :src=>"http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    = stylesheet_link_tag 'eventstreams', :media => 'screen, projection', :cache => false
  %body
    %section#eventstreams.es
      %header
        %h3#site_logo
          =link_to "Eventstreams", root_path
        %nav#main
          %ul
            %li=link_to "All Events", events_path
            -if signed_in?
              %li=link_to "New Event", new_user_event_path(current_user)
              %li=link_to t('profile.link'), user_path(current_user)
              %li=link_to t('authentication.sign_out'), sign_out_path
            -else
              %li=link_to t('authentication.sign_up'), new_user_path
              %li=link_to t('authentication.sign_in'), new_session_path
        -if signed_in? && @event && @event.valid?
          %nav#event_admin
            %ul
              %li.title= link_to @event.title, user_event_path(current_user, @event)
              %li= link_to "Event Pages", user_event_event_pages_path(current_user, @event)
              %li= link_to "Event Tracks", user_event_tracks_path(current_user, @event)
              %li= link_to "Talks", user_event_talks_path(current_user, @event)
              %li= link_to "Venues", user_event_venues_path(current_user, @event)
        
        = render :partial => 'layouts/flashes'
      %section.main
        .content
          = yield
